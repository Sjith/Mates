<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView 
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txt_onlineusers_matesId" />
    
    <ImageView
        android:id="@+id/ic_onlineusers_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/txt_onlineusers_weiboname"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:textSize="13dp"
        android:layout_below="@+id/ic_onlineusers_avatar"
        android:background="#EBEFF3"
		android:gravity="center"
        android:textColor="#767C77" />

</RelativeLayout>